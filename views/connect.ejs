<%- include('layouts/head.ejs') %>

<link rel="stylesheet" href="css\start.css">
<link rel="stylesheet" href="css\lib.css">
<link rel="stylesheet" href="css\connect.css">
<link rel="stylesheet" href="css\lib2.css">
<script type="text/javascript" src="js\connect.js"></script>
<div id="content">
  <div class="container">
    <header class=" header23">
      <div class="text-box">
        <h1 class="qwer">Connect</h1>
        <a href="/addcon" class="btn btn-white btn-animated">Add connect??</a>
      </div>
    </header>

    <div class="row">
      <div class="column-15">
        <ul>
          <div class="option">
            <label for="year">Year</label>
            <select name="year" id="year" size="2">
              <option value="1">First</option>
              <option value="2">Second</option>
              <option value="3">Third</option>
              <option value="4">Fourth</option>
            </select>
          </div>
          <br>
          <div class="option">
            <label for="department">Department</label>
            <select name="department" id="department" size="4">
              <option value="cst">CST</option>
              <option value="etc">ETC</option>
              <option value="it">IT</option>
              <option value="ee">EE</option>
              <option value="me">ME</option>
              <option value="ce">CE</option>
              <option value="aero">Aero</option>
              <option value="meta">Meta</option>
            </select>
          </div>
          <br>
          <div class="option">
            <label for="state">State</label>
            <select name="state" id="state" size="5">
              <option value="International Candidate">International Candidate</option>
              <option value="Andhra Pradesh">Andhra Pradesh</option>
              <option value="Arunachal Pradesh">Arunachal Pradesh</option>
              <option value="Assam">Assam</option>
              <option value="Bihar">Bihar</option>
              <option value="Chhattisgarh">Chhattisgarh</option>
              <option value="Goa">Goa</option>
              <option value="Gujarat">Gujarat</option>
              <option value="Haryana">Haryana</option>
              <option value="Himachal Pradesh">Himachal Pradesh</option>
              <option value="Jharkhand">Jharkhand</option>
              <option value="Karnataka">Karnataka</option>
              <option value="Kerala">Kerala</option>
              <option value="Madhya Pradesh">Madhya Pradesh	</option>
              <option value="Maharashtra">Maharashtra</option>
              <option value="Manipur">Manipur</option>
              <option value="Meghalaya">Meghalaya</option>
              <option value="Mizoram">Mizoram</option>
              <option value="Nagaland">Nagaland</option>
              <option value="Odisha">Odisha</option>
              <option value="Punjab">Punjab</option>
              <option value="Rajasthan">Rajasthan</option>
              <option value="Sikkim">Sikkim</option>
              <option value="Tamil Nadu">Tamil Nadu</option>
              <option value="Telangana">Telangana</option>
              <option value="Tripura">Tripura</option>
              <option value="Uttar Pradesh">Uttar Pradesh</option>
              <option value="Uttarakhand">Uttarakhand</option>
              <option value="West Bengal">West Bengal</option>
            </select>
          </div>
          <br>
        </ul>
        <div class="filterbuttons">
          <button type="button" name="filter" class="filter" onclick="filter()">filter</button>
          <button type="button" name="clearfilter" class="filter" onclick="clearfilter()">Clear</button>
        </div>
      </div>
      <div class="column-85">
        <% if(students.length==0){%>
          <h1>No Student found</h1>
        <%}%>
        <div class="parent">
        <%students & students.map(student=>{%>
          <div class="baby">
            <summary onclick="myfunction(this)">
              <% if(student.gender=="Male"){%>
                  <img src="/img/icon-5359553_1920.png">
                <%} else{%>
                    <img src="/img/user-310807_1280.png">
                  <%} %>

              <span><%=student.name%></span></summary>
            <div class="wesr">
              <h5>from : <%=student.city%>, <%=student.state%></h5>
              <p><strong>Department : </strong><%=student.department%> ( <%=student.year%> )</p>
              <p><strong>Email : </strong><%=student.email%></p>
              <hr>
              <p><strong>About : </strong><%=student.bio%></p>
            </div>
          </div>
        <%})%>
      </div>
    </div>
  </div>
</div>
</div>


<%- include('layouts/foot.ejs') %>

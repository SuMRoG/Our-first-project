<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title> <%=title%> </title>
  <link rel="stylesheet" href="css/login.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src='https://kit.fontawesome.com/a076d05399.js'></script>
</head>

<body>
  <div class="err">
    <%if(error!=""){%>
      <span><%=error%></span>
    <%}%>
  </div>
  <div class="loginbox">
    <div class="logincard">
      <form action="/login" method="post">
        <div class="uplogo">
          <img onclick="location.href='/'" src="img/logo.png">
          <span>Welcome Back</span>
        </div>
        <div class="details">
          <i class="fas fa-envelope"></i>
          <input onclick="go(this)" required type="email" name="email" placeholder="Email">
        </div>
        <div class="details">
          <i class="fas fa-key"></i>
          <input onclick="go(this)" required type="password" name="password" placeholder="Password">
        </div>
        <script>
          var all = document.getElementsByTagName('input')

          function go(ele) {
            for (var inp of all) {
              inp.style.border = "none";
            }
            ele.style.border = "3px solid #0a67d4"
          }

        </script>
        <div class="sub">
          <button type="submit" name="button">Login</button>
        </div>
      </form>
      <div class="otherlinks">
        <a href="#">Forget Password ?</a>
        <a href="/register">Create account</a>
      </div>
    </div>
  </div>

